<% content_for :body_class, 'chain-show' %>

<%= render "/shared/dh_banner_script" %>
<%= render partial: "near/base/chain_header", locals: { active_tab: 'Validators' } %>

<div class='content'>
  <div class='container'>
    <%= render "chain_status", status: @status %>
    <%= render_flash_messages %>
    <div class='row info-cards'>
      <div class='col-12 col-md-9 order-1 order-md-0'>
        <div class="row">
          <div class="col-lg-6 mb-3">
            <%= render "near/chains/sections/avg_block_times",
              block_times: @block_times,
              block_stats_hourly: @block_stats_hourly,
              block_stats_daily: @block_stats_daily
            %>
          </div>
          <div class="col-lg-6 mb-3">
            <%= render "near/chains/sections/active_validators",
              validators: @validators,
              validator_intervals: @validator_intervals
            %>
          </div>
        </div>
        <%= render "near/chains/sections/validators",
          validators: @validators,
          validator_intervals: @validator_intervals
        %>
      </div>
      <div class='col-12 col-md-3 order-0 order-md-1 info-cards'>
        <%= render "near/chains/sections/current_block", block: @block, staked_amount: @staked_amount %>
        <%= render "/shared/dh_sidebar_banner" %>
      </div>

    </div>
  </div>
</div>
