<% if @transactions.pages > 1 %>
  <div class="col-12 d-flex justify-content-center mt-2">
    <% if @transactions.page > 1 %>
      <%= link_to request.params.merge(transactions_page: @transactions.page - 1), id: 'prev-page', class: "btn btn-outline-secondary btn-sm" do %>
        <span class="fas fa-fw fa-chevron-left" ></span>
      <% end %>
    <% end %>
    <span class="mr-3 ml-3 align-self-center" > Page <%= @transactions.page %></span>
    <% if @transactions.page < @transactions.pages %>
      <%= link_to request.params.merge(transactions_page: @transactions.page + 1), id: 'next-page', class: "btn btn-outline-secondary btn-sm" do %>
        <span class="fas fa-fw fa-chevron-right"></span>
      <% end %>
    <% end  %>
  </div>
<% end %>
